<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">

    <Appenders>
        <Console name="stdout">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} %c{1}: %m%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <!-- Log levels: Trace < Debug < Info < Warn < Error < Fatal -->
    <Loggers>
        <Logger name="ca.uqam.inf5153.island.ise.Explorer"
                level="trace"
                additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island" level="INFO" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Mesh" level="INFO" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Map" level="INFO" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Viewer" level="INFO" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Board" level="INFO" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Arena" level="INFO" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Root level="off">
            <AppenderRef ref="stdout" />
        </Root>
    </Loggers>

</Configuration>